{
    "name": "mern-portfolio-pwa",
    "version": "1.0.0",
    "description": "Full-Stack Developer Portfolio PWA with MERN Stack",
    "main": "server/server.js",
    "scripts": {
        "start": "node server/server.js",
        "server": "nodemon server/server.js",
        "client": "npm run dev --prefix client",
        "dev": "concurrently \"npm run server\" \"npm run client\"",
        "build": "npm run build --prefix client",
        "install-all": "npm install && cd client && npm install"
    },
    "keywords": [
        "portfolio",
        "mern",
        "pwa"
    ],
    "author": "",
    "license": "ISC",
    "dependencies": {
        "bcryptjs": "^2.4.3",
        "cloudinary": "^1.41.3",
        "cors": "^2.8.5",
        "dotenv": "^16.3.1",
        "express": "^4.18.2",
        "jsonwebtoken": "^9.0.2",
        "mongodb": "^7.1.0",
        "mongoose": "^8.0.3",
        "multer": "^2.0.2",
        "multer-storage-cloudinary": "^4.0.0"
    },
    "devDependencies": {
        "concurrently": "^8.2.2",
        "nodemon": "^3.0.2"
    }
}
